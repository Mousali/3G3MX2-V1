//devcontainer.json
{
    "name": "Prolog",
    "image": "swipl:9.3.23",
    "postCreateCommand": "apt-get update && apt-get install -yq --fix-missing --no-install-recommends git",
    "mounts": [
        {
            "source": "/etc/localtime",
            "target": "/etc/localtime",
            "type": "bind"
        },
    ],
    "extensions": [
        "arthurwang.vsc-prolog",
        "streetsidesoftware.code-spell-checker",
        "yzhang.markdown-all-in-one",
        "github.copilot"
    ]
}